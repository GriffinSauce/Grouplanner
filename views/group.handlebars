<html>
	{{> header}}
	<body id="{{page}}">

		<div id="header">
			<a id="back" href="/groups">
				<i class="icon-left-open-big"></i>
				<span>{{group.name}}</span>
			</a>
			<a id="logout" href="/logout">
				<i class="icon-sign-out"></i>
			</a>
		</div>

		<div class="nav-placeholder"></div>
		<nav>
			<div class="tab active" data-target="plan"><div class="icon-calendar-1"></div><span>Plan</span></div>
			<div class="tab" data-target="manage"><div class="icon-manage"></div><span>Manage</span></div>
			<div class="tab" data-target="updates"><div class="icon-clock"></div><span>Updates</span></div>
		</nav>

		<section id="plan" class="active">
			<div id='period-controls'>
				<div class='period-control-button prev'>
					<div><i class="icon-chevron-left"></i></div>
				</div>
				<div class='period'><span>07 sept - 13 sept</span></div>
				<div class='period-control-button next'>
					<div><i class="icon-chevron-right"></i></div>
				</div>
			</div>

			<div id="periods">

			</div>
		</section>

		<section id="manage">
			<div id="info">
				<i class="icon-pencil"></i>
				<h2>{{group.name}}</h2>
				<p>{{group.description}}</p>
			</div>
			<div id="users">
				{{#each group.members}}
				<div class="user">
					<div class="img"><img src="{{picture}}" /></div>
					<div class="name">{{name.full}}</div>
					<div class='icon-x'></div>
				</div>
				{{/each}}
				<div id="invite">
					<input type="email" placeholder="invite@someone.com"><span class="btn" id="send"><i class="icon-mail"></i> Invite</span>
				</div>
			</div>
			<div class="btn leave">Leave group</div>
		</section>

		<section id="updates">
			<p>Latest updates will be shown here</p>
		</section>

	</body>
	<script>{{{JShare}}}</script>
	<script src="/socket.io/socket.io.js"></script>
	<script src="/www/lib/jquery-2.1.1.min.js"></script>
	<script src="/www/lib/moment-with-locales.js"></script>
	<script src="/www/lib/handlebars-v2.0.0.js"></script>
	<script src="/www/js/handlebars-ext.js"></script>
	<script src="/www/js/classes/App.js"></script>
	<script src="/www/js/classes/Group.js"></script>
	<script src="/www/js/classes/Period.js"></script>
	<script src="/www/js/{{page}}.js"></script>
</html>
