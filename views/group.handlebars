<html>
	<head>
		<title>Grouplanner</title>
		<meta name="description" content="Grouplanner, plan with groups .. duh!">
		<meta name="author" content="Joris Griffioen">
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="viewport" content="width=device-width user-scalable=no">
		<link rel="shortcut icon" href="www/favicon.ico">
		<link rel="icon" type="image/vnd.microsoft.icon" href="www/favicon.png" />
		<link href="https://fonts.googleapis.com/css?family=Roboto:100,200,300,400,500,600,700" rel="stylesheet" type="text/css">
		<link href="https://fontastic.s3.amazonaws.com/4Wbj9mNbujNrE6yptdhGr5/icons.css" rel="stylesheet">
		<link href="/www/css/grouplanner.css" rel="stylesheet" type="text/css">
	</head>
	<body id="group">

		<div id="header">
			<a id="back" href="/groups">
				<i class="icon-left-open-big"></i>
				<span>{{group.name}}</span>
			</a>
			<a id="logout" href="/logout">
				<i class="icon-sign-out"></i>
			</a>
		</div>

		<div id="period">
			<div id='period-controls'>
				<div class='period-control-button prev'>
					<div><i class="icon-chevron-left"></i></div>
				</div>
				<div class='period'><span>07 sept - 13 sept</span></div>
				<div class='period-control-button next'>
					<div><i class="icon-chevron-right"></i></div>
				</div>
			</div>

			<div id="periods">

			</div>
		</div>

		<div id="manage">
			<h1>Manage</h1>
			<div id="users">
				{{#each group.members}}
				<div class="user">
					<div class="img"><img src="{{picture}}" /></div>
					<div class="name">{{name.first}}</div>
				</div>
				{{/each}}
				<div id="invite-btn">
					<div id="icon"><i class="icon-plus"></i></div>
					<div id="title">Invite</div>
				</div>
			</div>
			<div id="info">
				<i class="icon-pencil"></i>
				<h2>{{group.name}}</h2>
				<p>{{group.description}}</p>
			</div>
		</div>

		<div id="invite">
			<h1>Invite</h1>
			<p>
				Invite <input type="number" value="1" /> new member(s).
			</p>
			<div class="btn" id="invitebtn">Send links</div>
		</div>
		
	</body>
	<script>{{{JShare}}}</script>
	<script src="/socket.io/socket.io.js"></script>
	<script src="/www/lib/jquery-2.1.1.min.js"></script>
	<script src="/www/lib/moment-with-locales.js"></script>
	<script src="/www/lib/handlebars-v2.0.0.js"></script>
	<script src="/www/js/handlebars-ext.js"></script>
	<script src="/www/js/classes/App.js"></script>
	<script src="/www/js/classes/Group.js"></script>
	<script src="/www/js/classes/Period.js"></script>
	<script src="/www/js/planner.js"></script>
</html>
