<div class="period planned"  id="{{id}}">
	<div class="wrapper">
		<div class="header">
			It's gonna happen on
		</div>
		<div id="plannedDate">
			<div id="day">
				<div class="name">{{day}}</div>
				<div class="date">{{date}}</div>
				<div class="month">{{month}}</div>
			</div>
		</div>
	</div>

	<div id="available">
		<span>{{available}}</span> will be joining you.
	</div>
	
	<div class="wrapper">
		<div class="header">
			Notes
		</div>
		<div id="notes">
			{{notes}}
		</div>
	</div>
</div>